<h1>New Exhibits</h1>

<table style="table-border: 10px;">
  <tr>
    <th>Qrcode</th>
    <th>Last Scanned</th>
    <th>Action</th>
  </tr>
<% qr_codes = @qr_codes.map.sort {|x,y| x.updated_at <=> y.updated_at} %>
<% qr_codes.map do |qr_code| %>
  <% if qr_code.is?(:new) %>
    <tr>
      <td><%= qr_code.qrcode %></td>
      <td><%= qr_code.updated_at %></td>
      <td><%= link_to 'Create Exhibit', new_museum_exhibit_path(Museum.first.id, qrcode: qr_code.qrcode) %></td>
    </tr>
  <% end %>
<% end %>
</table>
