<h1>Achievements</h1>

<table>
  <tr>
    <th>Image</th>
    <th>Title</th>
    <th>Description</th>
  </tr>

<% @achievements.each do |achievement| %>
  <tr>
    <td><%= achievement.image %></td>
    <td width="300"><%= achievement.title %></td>
    <td width="400"><%= achievement.description %></td>
  </tr>
  <tr>
      <td colspan="3">
        <%= link_to 'Edit', edit_achievement_path(achievement) %> |
        <%= link_to 'Destroy', achievement, method: :delete, data: { confirm: 'Are you sure?' } %>
      </td>
  </tr> 
<% end %>
</table>

<br />
<% if current_user.profile.role == "admin" %>
  <%= link_to 'New Achievement', new_achievement_path %>
<% end %>