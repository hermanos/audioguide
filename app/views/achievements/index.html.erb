<h1>Achievements</h1>

<table class="table table-striped  table-hover">
  <tr>
    <th>Image</th>
    <th>Title</th>
    <th>Description</th>
  </tr>

<% @achievements.each do |achievement| %>
  <tr>
    <td><%= image_tag(achievement.image_url) if achievement.image? %></td>
    <td width="300"><%= achievement.title %></td>
    <td width="400"><%= achievement.description %></td>
  </tr>
  <% if current_user.admin? %>
    <tr>
        <td colspan="3">
          <%= link_to 'Edit', edit_achievement_path(achievement) %> |
          <%= link_to 'Destroy', achievement, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
    </tr>
  <% end %> 
<% end %>
</table>

<br />
  <%= link_to 'New Achievement', new_achievement_path if current_user.admin? %>