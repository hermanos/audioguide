<h1>Museums</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Lat</th>
    <th>Long</th>
  </tr>

<% @museums.each do |museum| %>
  <tr>
    <td width="500"><%= museum.name %></td>
    <td><%= museum.lat %></td>
    <td><%= museum.long %></td>
  </tr>
  <tr>
    <td colspan="3">
      <%= link_to 'Show', museum %> |
      <% if current_user.profile.role != 'user'%>
      <%= link_to 'Edit', edit_museum_path(museum) %> |
      <%= link_to 'Destroy', museum, method: :delete, data: { confirm: 'Are you sure?' } %>
      <% end %>
    </td>
  </tr>
  <tr>
    <td colspan="3">
      <hr>
    </td>
  </tr>

<% end %>
</table>

<br />
<% if current_user.profile.role != 'user' %>
<%= link_to 'New Museum', new_museum_path %>
<% end %>